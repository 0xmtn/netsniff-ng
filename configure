	printf("%d\n", hdr->tp_status);
}
EOF

	$CC -o $TMPDIR/tpacketv2test $TMPDIR/tpacketv2test.c >> $TMPDIR/config.log 2>&1
	if [ ! -x $TMPDIR/tpacketv2test ] ; then
		echo "[NO]"
		MISSING_DEFS=1
		tools_remove "netsniff-ng"
		tools_remove "trafgen"
	else
		echo "[YES]"
	fi
}


